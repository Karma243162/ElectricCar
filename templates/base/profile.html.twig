{% extends 'base.html.twig' %}

{% block title %}
	{{parent()}}Profile 
{% endblock %}

{% block body %}

<section style="background-color: #eee;">
	<div class="container py-5">
	  <div class="row">
		<div class="col">
		 
		</div>
	  </div>
  
	  <div class="row">
		<div class="">
		  <div class="card mb-4">
			<div class="card-body text-center">
			  <img src="/yourheberge/public/images/icon-heberge-web/User-Profile-PNG.png" alt="avatar"
				class="rounded-circle img-fluid" style="width: 150px;">
			  <h5 class="my-3">{{app.user.prenom}}</h5>
              <h5 class="my-3">{{app.user.nom}}</h5>
			  <p class="text-muted mb-1">{{app.user.email}}</p>
              <p class="text-muted mb-1">{{app.user.ville}} ({{app.user.cp}})</p>
              <p class="text-muted mb-1">{{app.user.adresse}}</p>
                
			  <p class="text-muted mb-4">06-06-06-06-06</p>
			  <div class=" justify-content-center mb-2">
                  {% if is_granted('ROLE_ADMIN') %}
                  <p class="text-danger">Role Admin</p>
				<a href="{{path('app_user_profile')}}"><button type="button" class="btn btn-primary">Liste des utilisateur</button></a>
				{% endif %}

        
                
                {% if is_granted('ROLE_EDIT') %}
                <p class="text-success">Role Editeur</p>
                {% else %}
              {#   <p class="text-success">Role User</p> #}
                {% endif %}

			  </div>
	
			</div>
		  </div>

		</div>
		
		 
			
		  </div>
		</div>
	  </div>
	</div>
  </section>
{% endblock %} 
 